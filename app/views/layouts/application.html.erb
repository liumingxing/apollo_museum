<!DOCTYPE html>
<html>
  <head>
    <title>Museum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <style>
  * {font-size: 1em;}
  .footer .container {background-color: #eee; height: 160px; padding: 10px 20px;}
  </style>
  <body>
    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Trip Browser</a>

        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav navbar-right">
            
            <li><%= link_to "My Trips", trips_path %></li>
            
            <% if user_signed_in?%>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My account<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Welcome #{current_user.name}", "" %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: "DELETE" %></li>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container" style="margin-bottom: 170px;">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>       
      <%end%>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>       
      <%end%>
      
      <%= yield %>

    </div> <!-- /container -->
    

  </body>
</html>
