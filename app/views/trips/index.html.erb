<h1>Trips</h1>

<ul class="nav nav-tabs" id="myTabs">
  <li role="presentation" class="<%="active" if params[:tp] == "day_trip" || !params[:tp] %>"><a href="/?tp=day_trip">Day Trip</a></li>
  <li role="presentation" class="<%="active" if params[:tp] == "multi_day_trip" %>"><a href="/?tp=multi_day_trip">Mulitiple Day Trip</a></li>
</ul>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Trip day</th>
      <th>Museum count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.trip_day %></td>
        <td><%= trip.museums.size %></td>
        <td><%= link_to 'Show', trip %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path, :class=>"btn btn-default" %>
